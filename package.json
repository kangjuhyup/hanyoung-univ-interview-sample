{
  "name": "hyu_interview",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "author": {
    "name" : "riverKang",
    "email": "fog0510@gmail.com"
  },
  "homepage": "./",
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.36",
    "@types/path-browserify": "^1.0.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "electron-is-dev": "^2.0.0",
    "electron-rebuilder": "^0.0.20",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-scripts": "5.0.1",
    "react-webcam": "^7.1.1",
    "sqlite3": "^5.1.6",
    "styled-components": "^6.0.0-rc.6",
    "typescript": "^4.9.5",
    "url": "^0.11.1",
    "util": "^0.12.5",
    "web-vitals": "^2.1.4",
    "zustand": "^4.3.8"
  },
  "scripts": {
    "react-start": "react-app-rewired start",
    "react-build": "react-app-rewired build",
    "react-test": "react-app-rewired test",
    "react-eject": "react-app-rewired eject",
    "start-renderer": "cross-env BROWSER=none npm run react-start",
    "start-main": "electron .",
    "compile-main": "tsc ./public/*.ts",
    "start-main-after-renderer": "wait-on http://localhost:3000 && npm run start-main",
    "dev": "tsc ./public/electron.ts && concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && npx electron .\"",
    "pack": "npm run compile-main && npm run react-build && electron-builder --dir",
    "build": "rm -rf build dist && npm run compile-main && npm run react-build && electron-builder build",
    "build:osx": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
    "build:win": "npm run build -- --win",
    "predist": "npm run compile-main"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.26",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^7.0.1"
  },
  "build": {
    "productName": "huv_interview",
    "appId": "hy.univ.interview",
    "asar": false,
    "protocols": {
      "name": "interview",
      "schemes": [
        "interview"
      ]
    },
    "mac": {
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "tournant"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "rpm",
        "zip",
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "installerLanguages": [
        "en_US",
        "ko_KR"
      ],
      "language": "1042"
    },
    "directories": {
      "output": "dist/",
      "app": ".",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from" : "voice",
        "to": "voice",
        "filter" : ["**/*"]
      },
      {
        "from" : "database",
        "to":"database",
        "filter" : ["**/*"]
      }
    ],
    "icon": "public/assets/icons/png/hy.png"
  }
}
